
@{
    ViewBag.Title = "cta_agente1";
}


<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Activadores</title>

    <link href="~/Content/estilo/style_dos.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
</head>

<body>

    <h3>HOLA @ViewData["nom"].ToString().ToUpper() YA ERES @ViewData["clasi"].ToString().ToUpper()</h3>
    <div class="jumbo">
        <div class="row">
         
            <header class="jumbo">

                <p class="p_esp">Como agente de cambio a medida que recicles podrás acumular puntos de canje y subir de categoría por promedio mensual.</p>
            </header>
            <section class="row jumbo">
                <!-- table -->
                <div class=" col-md-7">
                    <table class="table table-bordered table-sm ">
                        <thead>
                            <tr class="table-dark">
                                <th scope="col"></th>
                                <th scope="col">Material</th>
                                <th scope="col">Puntos</th>
                                <th scope="col">Cantidad</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <th scope="row">1</th>
                                <td>Botellas</td>
                                <td>2</td>
                                <td>1 punto</td>


                            </tr>
                            <tr>
                                <th scope="row">2</th>
                                <td>Ropa</td>
                                <td>1 Kilo</td>
                                <td>1 punto</td>

                            </tr>
                            <tr>
                                <th scope="row">3</th>
                                <td>Cartones y papeles</td>
                                <td>1 Kilo</td>
                                <td>1 punto</td>

                            </tr>
                            <tr>
                                <th scope="row">4</th>
                                <td>Plásticos</td>
                                <td>1 Kilo</td>
                                <td>1 punto</td>

                            </tr>
                        </tbody>
                    </table> <!-- fin_table -->
                    <h3>¡Puedes ganar ayudando al medio ambiente!</h3>
                </div>
                <div class="col-md-5">

                    <img class="imagen_table" src="~/Content/img/imagenes_reciclaje_table.png" />
                </div>
            </section>

            <form action="~/Vistauno/reciclar" method="get">
                <input type="submit" class="btn" value="reciclar" />


                <input type="hidden" name="nom" value="@ViewData["nom"].ToString() " />
                <input type="hidden" name="clasi" value="@ViewData["clasi"].ToString() " />
                <input type="hidden" name="dir" value="@ViewData["dir"].ToString() " />


            </form>

            <form action="~/Vistauno/return_busqueda" method="post">
                <input type="text" name="rut" value="" />
                <input type="hidden" name="cant" value="@ViewBag.cant" />
                <input type="submit" class="btn" name="enviar" value="Ver mis puntos" />
            </form>
        </div>
    </div>

  

</body>
</html>

