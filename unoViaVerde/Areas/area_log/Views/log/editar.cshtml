
@{
    ViewBag.Title = "editar";
}

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Editar</title>
    <link href="~/Content/estilo/style_dos.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
</head>
<body>
    <div class="jumbo">
        <h4>@ViewBag.mensaje</h4>
        <form action="~/area_log/log/editar" method="post">
            <div class="row">
                <div class="col-md-3">
                    <h4>Ingrese rut:</h4>
                    <input type="text" name="rut" value="" />
                </div>
                <div class="col-md-3">
                    <h4>Editar nombre:</h4>
                    <input type="text" name="nom" value="" />
                </div>
                <div class="col-md-3">
                    <h4>Editar categoria:</h4>
                    <input type="text" name="categoria" value="" />
                </div>
                <div class="col-md-3">
                    <h4>Editar</h4>
                    <input type="submit" class="btn" value="Modificar Datos">
                </div>
            </div>
        </form>
        <div class="row">
            <div class="col-md-4">
                <form method="post" action="~/area_log/log/admin">
                    <input type="hidden" name="op" value="eliminar">
                    <input type="submit" class="btn" value="ELIMINAR">
                </form>
            </div>
            <div class="col-md-4">
                <form method="post" action="~/area_log/log/admin">
                    <input type="hidden" name="op" value="mostrar">
                    <input type="submit" class="btn" value="Mostrar">
                </form>
            </div>

        </div>
    </div>

</body>
</html>



