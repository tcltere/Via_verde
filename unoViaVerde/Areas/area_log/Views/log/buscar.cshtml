
@{
    ViewBag.Title = "buscar";
}

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Activadores</title>
        <link href="~/Content/estilo/Style.css" rel="stylesheet" />
    <link href="~/Content/estilo/style_dos.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
</head>

<body>

    @if (Convert.ToString(@ViewData["clasi"]) == "Agente")
    {
    <form action="~/area_log/log/cta_agente1" method="post">
        <input type="hidden" name="rut" value="@ViewData["rut"]" />
        <input type="hidden" name="nom" value="@ViewData["nom"]" />
        <input type="hidden" name="clasi" value="@ViewData["clasi"] " />
        <input type="hidden" name="pass" value="@ViewData["pass"] " />
        <input type="hidden" name="dir" value="@ViewData["dir"] " />
        <input type="submit" name="name" value="Mi Cuenta" class="btn" />
    </form>


    }
    else if (Convert.ToString(@ViewData["clasi"]) == "Activador")
    {
<form action="~/area_log/log/cta_activador" method="post">
    <input type="hidden" name="nom" value="@ViewData["nom"]" />
    <input type="hidden" name="clasi" value="@ViewData["clasi"] " />
    <input type="hidden" name="pass" value="@ViewData["pass"] " />
    <input type="hidden" name="dir" value="@ViewData["dir"] " />
    <input type="submit" name="name" value="Mi Cuenta" class="btn" />
</form>
    }
    else if (Convert.ToString(@ViewData["clasi"]) == "Administrador")
    {
        <form action="~/area_log/log/Admin" method="post">
            <input type="hidden" name="nom" value="@ViewData["nom"]" />
            <input type="hidden" name="clasi" value="@ViewData["clasi"] " />
            <input type="hidden" name="pass" value="@ViewData["pass"] " />
            <input type="submit" name="name" value="Mi Cuenta" class="btn" />
        </form>
    }

    <h1>¿Sabes como reciclar?</h1>
    <h4>Conoce los pasos</h4>
    <div class="jumbo row">
        <div class="col-md-6 ">
            <img src="~/Content/img/uno.png" width="50" height="50" />
            <p>Entrega los materiales limpios</p>
            <img src="~/Content/img/dos.png" width="50" height="50" />
            <p>Reduce al máximo, para utilizar menos espacio</p>
            <img src="~/Content/img/tres.png" width="50" height="50" />
            <p>Separa en contenedores cada material</p>

        </div>
        <div class="col-md-6">

            <ul>
                <li class="aside">Límpia<img src="~/Content/img/ic-limpio.png" width="50" height="50" /></li>
                <li class="aside">Reduce<img src="~/Content/img/ic-reduce.png" width="50" height="50" /></li>
                <li class="aside">Separa<img src="~/Content/img/ic-separa.png" width="50" height="50" /></li>
            </ul>
        </div>


    </div>
    <h6>Estos sencillos pasos facilitaran el trabajo de nuestros recolectores!!!</h6>
    <h4>Nuestros Amigos Activadores</h4>
    <div class="jumbo row ">
        <div class="col-md-4 contenedor">
            <a href="~/Vistauno/activador"><img class="top" src="~/Content/img/_img_cachivaches_web.png" /></a>
            <div class="over">
                <div class="text">
                    <img src="~/Content/img/cachivcahes.png" width="400" height="400" />
                </div>
            </div>
        </div>
        <div class="col-md-4 contenedor">
            <a href="~/Vistauno/activador"><img class="top" src="~/Content/img/convictus_img.png" /></a>
            <div class="over">
                <div class="text">
                    <img src="~/Content/img/convictus.png" width="400" height="400" />
                </div>
            </div>
        </div>
        <div class="col-md-4 contenedor">
            <a href="~/Vistauno/activador"><img class="top" src="~/Content/img/greenglass_web.png" /></a>
            <div class="over">
                <div class="text">
                    <img src="~/Content/img/greenglass.png" width="400" height="400" />
                </div>
            </div>
        </div>
    </div>




</body>
</html>
