
@{
    ViewBag.Title = "Admin";
}


<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Activadores</title>
    <link href="~/Content/estilo/style_dos.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
</head>
<body>
    <div class="jumbo">
        <h4>Agregar categorias y editar datos</h4>
        <div class="row jumbo">
            <div class="col-md-4">
                <form method="post" action="~/area_log/log/admin">
                    <input type="hidden" name="op" value="mostrar">
                    <input type="submit" class="btn" value="Ver usuarios">
                </form>
            </div>
            <div class="col-md-4">
                <form method="post" action="~/area_log/log/admin">
                    <input type="hidden" name="op" value="eliminar">
                    <input type="submit" class="btn" value="ELIMINAR">
                </form>
            </div>
            <div class="col-md-4">
                <form method="post" action="~/area_log/log/admin">
                    <input type="hidden" name="op" value="modificar">
                    <input type="submit" class="btn" value="MODIFICAR">
                </form>
            </div>
            <div class="col-md-4">
              

            </div>   
        </div>
        <div class=" jumbo">
            <h4>Ver datos de solicitud reciclaje</h4>
            <form method="post" action="~/area_log/log/admin">
                <input type="hidden" name="op" value="tabla_solicitud">
                <input type="submit" class="btn" value="Tabla solicitud">
            </form>
            <hr class="my-4">
            <div class="jumbo">
                @Html.Raw(ViewBag.mensaje)
            </div>
            <hr class="my-4">
            <div class="row">
                <div class="col -md-4">
                    <h4>Agregar datos para reciclaje</h4>
                    <form method="post" action="~/area_log/log/admin">
                        <input type="hidden" name="op" value="aceptar_solicitud">
                        <div class="col-md-3">

                            <label class="text-white">Ingrese rut:</label>    <input type="text" name="rut" value="" />
                        </div>
                        <div class="col-md-3">
                            <label class="text-white">Ingrese chofer:</label>
                            <input type="text" name="chofer" value="" />
                        </div>
                        <div class="col-md-3">
                            <label class="text-white">Agregar patente:</label>
                            <input type="text" name="patente" value="" />
                        </div>
                        <div class="col-md-3">
                            <label class="text-white">Agregar orden:</label>
                            <input type="text" name="orden" value="" />
                        </div>
                        <hr class="my-4">
                        <input type="submit" class="btn" value="Agregar">
                    </form>
                </div>

                <div class="col -md-4">
                    <h4>Agregar stock</h4>
                    <form method="post" action="~/area_log/log/admin">
                        <input type="hidden" name="op" value="agregar_stock">
                        <input type="submit" class="btn" value="Agregar stock">
                    </form>
                    <hr class="my-4">
                    <h4>Ver datos de solicitud reciclaje</h4>
                    <form method="post" action="~/area_log/log/admin">
                        <label class="text-white">Ingrese rut:</label>
                        <input type="hidden" name="op" value="buscar_solicitud">
                        <input type="text" name="rut" value="" />
                        <input type="submit" class="btn" value="buscar solicitud">
                    </form>
                </div>
                <div class="col -md-4">
                    <ul>
                        <li><span>Nombre</span><h5>  @ViewBag.nom</h5></li>
                        <li><span>Rut</span><h5>  @ViewBag.rut</h5></li>
                        <li><span>cantidad</span><h5>  @ViewBag.cant</h5></li>
                        <li><span>material</span><h5>  @ViewBag.mat</h5></li>
                        <li><span>direccion</span><h5>  @ViewBag.dir</h5></li>
                        <li><span>Patente</span><h5>  @ViewBag.patente</h5></li>
                        <li><span>Orden</span><h5>  @ViewBag.orden</h5></li>
                        <li><span>Chofer</span><h5>  @ViewBag.chofer</h5></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

  

   



</body>
</html>

