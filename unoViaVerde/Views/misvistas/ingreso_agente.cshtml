
@{
    ViewBag.Title = "contacto";
}
<h3>@ViewBag.mensaje</h3>

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Via verde</title>
    <link href="~/Content/estilo/style_dos.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">

</head>
<body>
    <!--formulario -->
    <div class="container-fluid formulario">
        <header class="row">
            <div class="col-md-2 i_fondo_1">
                <!-- aquí va imagen -->
            </div>
            <div class="col-md-8 form_i_agente">
                <form method="post" action="/Vistauno/guarda" name="formulario" onsubmit="return validar()">
                    <div class="form-group row">
                        <label for="inputEmail3" class="col-sm-2 col-form-label text-white">Ingrese Email</label>
                        <div class="col-sm-10">
                            <input type="text" name="Correo" class="form-control text-white" id="inp_mail" placeholder="Email">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="inputPassword3" class="col-sm-2 col-form-label text-white">Ingrese Password</label>
                        <div class="col-sm-10">
                            <input type="text" name="pass" class="form-control" id="inputPassword3" placeholder="Password" >
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-5">
                            <div class="form-group">
                                <label for="inputAddress" class="text-white">Nombre y Apellido</label>
                                <input type="text" name="Nombre" class="form-control" id="nom">
                            </div>
                            <div class="form-group">
                                <label for="inputAddress2" class="text-white">Dirección</label>
                                <input type="text" name="Direccion" class="form-control" id="inputAddress2" required>
                            </div>
                        </div>
                        <div class="col-sm-5">
                            <div class="form-group">
                                <label for="inputAddress" class="text-white">Rut</label>
                                <input type="text" name="Rut" class="form-control" id="inputAddress" required>
                            </div>
                            <div class="form-group">
                                <label for="inputAddress2" class="text-white">teléfono</label>
                                <input type="text" name="Telefono" class="form-control"required>
                            </div>

                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-2 text-white"></div>
                        <div class="col-sm-10">
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="clasi" id="gridRadios2" value="Activador">
                                <label class="form-check-label text-white" for="gridRadios2">
                                    Activador
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="clasi" id="gridRadios2" value="Agente">
                                <label class="form-check-label text-white" for="gridRadios2">
                                    Agente
                                </label>
                            </div>
                        </div>

                    </div>
                    <div class="form-group row">
                        <div class="col-sm-10">
                            <button type="submit" class="btn btn-primary">Enviar</button>
                        </div>
                    </div>
                </form>
            </div>
            <div class="col-md-2 i_fondo_2">
                <!-- aquí va imagen -->
            </div>
        </header>
    </div>




    <!-- footer -->
    <footer class="foo">
        <div class=" row">
            <div class="col-md-4 rt">
                <ul>
                    <li><a href="#">Conócenos</a></li>
                    <li><a href="#">Ingresa</a></li>
                    <li><a href="#">Fono:+569-93456667</a></li>
                    <li><a href="#">trabaja con nosotros</a></li>
                </ul>
            </div>
            <div class="col-md-4 logos">
                <ul>
                    <li><a href="http://facebook.com/"><img class="ico" src="~/Content/img/logo_face.png" /></a></li>
                    <li><a href="http://instagram.com/"><img class="ico" src="~/Content/img/logo_intagram.png" /></a></li>
                    <li><a href="http://twiter.com/"><img class="ico" src="~/Content/img/logo_twiter.png" /></a></li>
                </ul>
            </div>
            <div class="col-md-4 ">
                <img class="img_log_vv" src="~/Content/img/logo_via_verde.png" />
            </div>
        </div>
    </footer>

    <!-- validacion -->
    <script type="text/javascript">
        function validar() {
            var nom = document.forms["formulario"]["Nombre"].value;
            var correo = document.forms["formulario"]["Correo"].value;
            var pass = document.forms["formulario"]["pass"].value;
            if (nom == "") {
                Swal.fire({
                    text: 'Debe ingresar nombre',
                    background: ' #808080',
                    confirmButtonText: 'Aceptar',
                    backdrop: true,
                    position: 'top-end',
                    width: '30%',

                })
                return false;
            } else if (correo == "") {
                Swal.fire({
                    text: 'Debe ingresar correo',
                    background: ' #808080',
                    confirmButtonText: 'Aceptar',
                    backdrop: true,
                    position: 'top-end',
                    width: '40%',

                })
                return false;
            } else if (pass == "") {
                Swal.fire({
                    text: 'Debe ingresar password',
                    background: ' #808080',
                    confirmButtonText: 'Aceptar',
                    backdrop: true,
                    position: 'top-end',
                    width: '40%',

                })
                return false;
            }
        }
     
    </script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>

</body>
</html>



